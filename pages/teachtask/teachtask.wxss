/* pages/teachtask/teachtask.wxss */
page {
  background: #F5F5F6;
}

.teach {}

/* 顶部下拉框 */
.head {
  position: sticky;
  top: 0;
  z-index: 99;
  padding-left: 32rpx;
  padding-right: 32rpx;
  height: 56rpx;
  padding-left: 32rpx;
  padding-top: 14rpx;
  padding-bottom: 18rpx;
  background: #fff;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
}

.head .pickermethod {
  width: 206rpx;
}

.head .week-l-l,
.head .week-l,
.head .week-r {
  position: relative;
  width: 186rpx;
  font-size: 32rpx;
  padding-left: 32rpx;
  height: 54rpx;
  border-radius: 27rpx;
  line-height: 54rpx;
  border: 1rpx solid #CCCCCF;
}

.head .week-l-l {
  width: 196rpx;
  padding-left: 22rpx;
}

.week-l-l image,
.week-l image,
.week-r image {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 16rpx;
  top: 3rpx;
}

/* 顶部下拉框结束 */

.supply {
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.list {
  position: relative;
  width: 638rpx;
  padding: 32rpx 24rpx;
  background: #fff;
  margin-bottom: 16rpx;
}

.date {
  display: flex;
  justify-content: space-between;
}

.date .left {
  font-size: 40rpx;
  color: #333336;
  font-weight: 600;
}

.date .left text {
  font-size: 28rpx;
  font-weight: 400;
}

.date .right {
  height: 52rpx;
  line-height: 52rpx;
  background: #EBF0FF;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #5D88FF;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.desc {
  font-size: 32rpx;
  color: #333336;
  margin-top: 24rpx;
  margin-bottom: 16rpx;
}

.room {
  font-size: 28rpx;
  color: #666669;
}

.list .status {
  width: 92rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 28rpx 0px 8rpx 0px;
  background: red;
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
}

.tingke {
  background: #FF5D5D;
}
.buke {
  background: #FFAB5C;
}

.daike {
  background: #5D88FF;
}

.tiaoke {
  background: #6CCB85;
}

/* 任务 */
.current-semester {
  z-index: 999;
  color: #FFF;
  text-align: center;
  position: fixed;
  bottom: 150rpx;
  right: 32rpx;
  width: 80rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  height: 72rpx;
  line-height: 36rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 50%;
  background: linear-gradient(180deg, #96BDFF 0%, #5D88FF 100%);
  box-shadow: 0px 4px 26px 0px rgba(93, 136, 255, 0.34);
}