/* pages/coursescore/coursescore.wxss */
.score {
  min-height: 100vh;
  font-size: 32rpx;
  color: #5D88FF;
  background: #F5F5F6;
}

.head {
  position: sticky;
  top: 0;
  width: 718rpx;
  height: 84rpx;
  background: #FFF;
  padding-left: 32rpx;
  color: #333336;
  border-bottom: 1px solid #EEEEF1;
}

.picker {
  margin-top: 14rpx;
  position: relative;
  display: inline-block;
  border: 1rpx solid #CCCCCF;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 32rpx;
  padding-left: 70rpx;
  padding-right: 130rpx;
  /* line-height: 84rpx; */
}

.picker image {
  position: absolute;
  right: 10rpx;
  top: -2rpx;
  width: 48rpx;
  height: 48rpx;
}

/* 每学期分数 */
.title {
  height: 48rpx;
  padding-left: 32rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  background: #FFFFFF;
  box-shadow: 0px 6px 12px 0px rgba(0, 0, 0, 0.1);
}

.title view {
  padding-left: 16rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #333336;
  border-left: 8rpx solid #5D88FF;
}

.layer {
  width: 686rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  background: #fff;
}

.desc {
  width: 684rpx;
  /* border-radius: 8rpx; */
  /* border: 1rpx solid #CCDAFF !important; */
}

.red {
  color: red;
}

.desc .item {
  border-radius: none;
}

.desc .item .top {
  border-top: 1rpx solid #CCDAFF;
  border-bottom: 1rpx solid #CCDAFF;
  display: flex;
  justify-content: start;
  height: 100rpx;
  line-height: 100rpx;
  background: #F6F8FF;
}

.desc .item .top .top-l {
  width: 508rpx;
  padding-left: 24rpx;
  border-right: 1rpx solid #CCDAFF;
}

.desc .item .top .top-r {
  width: 151rpx;
  text-align: center;
  border-right: 1rpx solid #CCDAFF;
}

.hidden {
  display: none;
  opacity: 0;
}

.desc .item .bottom {
  /* transition: all 3s; */
  animation: move .06s;
  padding-left: 24rpx;
  padding-right: 24rpx;
  /* background: #FFF; */
}

@keyframes move {
  0% {
    height: 0px;
  }

  50% {
    height: 144rpx;
  }

  100% {
    height: auto;
  }
}

.desc .item .bottom .bottom-item {
  display: flex;
  justify-content: space-between;
  min-height: 48rpx;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  font-size: 32rpx;
  color: #666669;
}

.desc .item .bottom .bottom-item .bottom-item-l {
  min-width: 150rpx;
}

.desc .item .bottom .bottom-item .bottom-item-r {}

