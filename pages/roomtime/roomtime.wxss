/* pages/roomtime/roomtime.wxss */
.room {
  background: #F5F5F6;
  min-height: 100vh;
  font-size: 32rpx;
  color: #333336;
}

.title {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 32rpx;
}

.cate {
  padding: 32rpx;
  background: #fff;
}

.item {
  height: 76rpx;
  line-height: 76rpx;
  display: flex;
  justify-content: start;
}

.cate .item:nth-of-type(1) {
  margin-bottom: 20rpx;
}

.cate .item:nth-of-type(3) {
  margin-top: 64rpx;
  margin-bottom: 20rpx;
}

.left {
  width: 156rpx;
}

.right {
  position: relative;
  width: 490rpx;
  padding-left: 24rpx;
  padding-right: 16rpx;
  background: #F5F5F6;
  border-radius: 8rpx;
}

.right image {
  position: absolute;
  top: 14rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
}

.bottom {
  position: fixed;
  bottom: 48rpx;
  left: 32rpx;
  width: 686rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  background: #5D88FF;
  text-align: center;
  border-radius: 8rpx;
  font-size: 32rpx;
}