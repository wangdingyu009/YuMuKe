/* pages/timetable/timeable.wxss */
/* 顶部下拉框 */
page {
  background: #F5F5F6;
}
.head-layer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
}
.head {
  /* position: sticky;
  top: 0;
  z-index: 99; */
  padding-left: 32rpx;
  padding-right: 32rpx;
  height: 28px;
  padding-left: 32rpx;
  padding-top: 7px;
  padding-bottom: 9px;
  background: #fff;
  /* margin-bottom: 24rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.head .pickermethod {
  width: 206rpx;
}

.head .week-l-l,
.head .week-l,
.head .week-r {
  position: relative;
  width: 186rpx;
  font-size: 32rpx;
  padding-left: 32rpx;
  height: 54rpx;
  border-radius: 27rpx;
  line-height: 54rpx;
  border: 1rpx solid #CCCCCF;
}

.head .week-l-l {
  width: 196rpx;
  padding-left: 22rpx;
}

.week-l-l image,
.week-l image,
.week-r image {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 16rpx;
  top: 3rpx;
}

/* 顶部下拉框结束 */
/* 头部标题开始 */
.header-title {
  height: 24px;
  background: #F5F5F6;
  box-shadow: 0px 6px 12px 0px rgba(0, 0, 0, 0.1);
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 14px;
  padding-bottom: 14px;
  display: flex;
  align-items: center;
}

.header-title view:nth-of-type(1) {
  width: 8rpx;
  height: 16px;
  border-radius: 4rpx;
  margin-right: 16rpx;
  background: #5D88FF;
}
.header-title view:nth-of-type(2) {
  min-width: 100rpx;
  font-size: 36rpx;
  color: #333336;
  font-weight: 500;
}
/* 头部标题结束 */

/* 列表开始 */
.list-child {
  padding-left: 24rpx;
  padding-right: 24rpx;
  background: #fff;
  /* height: 114px; */
  height: 228rpx;
  border-radius: 8rpx;
  /* margin-top: 14px; */
  margin-top: 28rpx;
  /* padding-top: 16px; */
  padding-top: 32rpx;
  /* padding-bottom: 16px; */
  padding-bottom: 32rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.top {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}

.top-left {
  font-size: 40rpx;
  font-weight: 600;
  color: #333336;
}
.top-left text {
  font-size: 28rpx;
  font-weight: 400;
}
.top-right {
  min-width: 20rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  background: #EBF0FF;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 32rpx;
  color: #5D88FF;
}

.middle {
  font-size: 32rpx;
  color: #333336;
}
.bottom {
  font-size: 28rpx;
  color: #666669;
}
/* 列表结束 */

/* 本学期课表 */
.current-semester {
  z-index: 999;
  color: #FFF;
  text-align: center;
  position: fixed;
  bottom: 150rpx;
  right: 32rpx;
  width: 80rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  height: 72rpx;
  line-height: 36rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 50%;
  background: linear-gradient(180deg, #8786CB 0%, #4F4E9B 100%);
  box-shadow: 0px 4px 26px 0px rgba(79, 78, 155, 0.2);
}