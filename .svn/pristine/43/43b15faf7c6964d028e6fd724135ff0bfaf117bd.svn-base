// pages/refuse/refuse.js
const {
  confirmOrRefuse
} = require('../../utils/api')

Page({

  /**
   * 页面的初始数据
   */
  data: {
    content: '',
    id: '',
    stepId: ''
  },

  // 文本域
  onChangeInputing(e) {
    this.setData({
      content: e.detail.value
    })
  },

  // submit() {
  async submit() {
    let params = {
      id: this.data.id,
      stepId: this.data.stepId,
      remark: this.data.content,
      approval: 'N'
    }
    let res = await confirmOrRefuse(params)
    console.log(res, '拒绝')
    if (res.code == 1) {
      wx.lin.showToast({
        title: '提交成功~',
        icon: 'success',
        success: (res) => {
          wx.navigateBack({
            delta: 1
          })
        }
      })
    } else {
      wx.lin.showToast({
        title: '提交失败，请稍后重试~',
        icon: 'warning',
        success: (res) => {
        }
      })
    }
    // },
    // wx.lin.showToast({
    //   title: '提交成功~',
    //   icon: 'success',
    //   success: (res) => {
    //     // wx.navigateBack({
    //     //   delta: 1
    //     // })
    //   }
    // })
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    this.setData({
      id: options.id,
      stepId: options.stepid
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})