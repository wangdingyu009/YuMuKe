/* 本学期课表 */
.current-semester {
  z-index: 999;
  color: #FFF;
  text-align: center;
  position: fixed;
  bottom: 150rpx;
  right: 32rpx;
  width: 80rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  height: 72rpx;
  line-height: 36rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 50%;
  background: linear-gradient(180deg, #8786CB 0%, #4F4E9B 100%);
  box-shadow: 0px 4px 26px 0px rgba(79, 78, 155, 0.2);
}