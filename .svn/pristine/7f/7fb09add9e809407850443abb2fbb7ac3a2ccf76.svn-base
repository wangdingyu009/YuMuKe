/* pages/switchapplyinfo/switchapplyinfo.wxss */
page {
  background: #F5F5F6;
  font-size: 32rpx;
}

/* 申请状态和原因 */
.reason {
  background: #fff;
  padding: 32rpx;
  min-height: 170rpx;
}

.state {
  font-size: 40rpx;
  color: #5D88FF;
  line-height: 56rpx;
}

.reason .title {
  color: #99999C;
  margin-top: 16rpx;
  margin-bottom: 10rpx;
  line-height: 44rpx;
}

.con {
  color: #333336;
  line-height: 44rpx;
}

/* 申请人信息 */
.layer {
  padding: 26rpx 32rpx;
}

.intro {
  padding: 32rpx;
  background: #fff;
  border-radius: 16rpx;
}

.item {
  display: flex;
  justify-content: start;
  line-height: 44rpx;
  margin-bottom: 5rpx;
}

.left {
  width: 174rpx;
  color: #99999C;
}

.right {
  width: 448rpx;
  color:#333336;
  text-align: right;
}

/* 代课信息 */
.time {
  background: #fff;
  margin-top: 16rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  border-radius: 16rpx;
  /* padding-bottom: 32rpx; */
}

.time .title {
  position: relative;
  height: 98rpx;
  line-height: 98rpx;
  font-weight: 600;
  color: #33333C;
}

.desc-info {
  height: 172rpx;
  background: rgba(93, 136, 255, 0.12);
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.cycle, .week, .section, .room {
  display: flex;
  justify-content: start;
}

.title-l {
  color: #99999C;
  width: 76rpx;
}

.time .con {
  color: #333336;
  width: 498rpx;
}

/* 附件信息 */
.accessory {
  display: flex;
  justify-content: space-between;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #99999C;
  background: #fff;
  padding-left: 32rpx;
  padding-right: 32rpx;
  border-radius: 16rpx;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}

.accessory .right {
  color: #5D88FF;
}

.liucheng {
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 42rpx;
}

.liucheng view:nth-of-type(1) {
  font-size: 32rpx;
  color: #33333C;
  font-weight: 600;
}

