<!--pages/index/index.wxml首页-->
<view class="container">
  <view class="bgimg">
    <image src="/images/indexbg.png"></image>
  </view>
  <!-- 轮播图 -->
  <view class="swiper-box">
    <swiper bindchange="swiperChange" indicator-dots="{{indicatorDots}}" circular="{{true}}"
      indicator-active-color="rgba(110, 152, 255, 1)" indicator-color="rgba(110, 152, 255, .3)" autoplay="{{autoplay}}"
      interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{bannerList}}" wx:key="index">
        <swiper-item bindtap="toActivityDetails" data-item="{{item}}">
          <view class="slide-image-box">
            <image src="{{item.img}}" class="slide-image" mode="aspectFill" />
          </view>
        </swiper-item>
      </block>
    </swiper>
    <!-- 自定义原点 -->
    <view class="dots">
      <block wx:for="{{bannerList}}" wx:key="index">
        <view class="dot{{index == currentSwiper ? ' active' : ''}}"></view>
      </block>
    </view>
  </view>
  <view class="layer">
    <!-- 通告栏 -->
    <view class="callboard">
      <l-notice-bar l-class="callboard-item" front-icon-name="notification"  show="{{true}}" type="roll" speed="1000">
        <text class="text-list">我是通告栏我是通告栏我是通告栏我是通告栏1</text>
        <text class="text-list">我是通告栏我是通告栏我是通告栏我是通告栏2</text>
        <text class="text-list">我是通告栏我是通告栏我是通告栏我是通告栏3</text>
      </l-notice-bar>
    </view>
    <!-- 宫格 -->
    <view class="grid">
      <view class="grid-item" bindtap="viewScore">
        <image class="grid-icon" src="/images/kechengchengji.png"></image>
        <view class="grid-name">课程成绩</view>
      </view>
      <view class="grid-item" bindtap="goTimetable">
        <image class="grid-icon" src="/images/kechengbiao.png"></image>
        <view class="grid-name">课程课表</view>
      </view>
      <view class="grid-item" bindtap="goExamination">
        <image class="grid-icon" src="/images/kechengkaoshi.png"></image>
        <view class="grid-name">课程考试</view>
      </view>
      <view bindtap="goWatchTask" class="grid-item">
        <image class="grid-icon" src="/images/jiankaorenwu.png"></image>
        <view class="grid-name">监考任务</view>
      </view>
      <view bindtap="gogradeexamination" class="grid-item">
        <image class="grid-icon" src="/images/dengjichaxun.png"></image>
        <view class="grid-name">等级考试</view>
      </view>
      <view bindtap="goRoomTime" class="grid-item">
        <image class="grid-icon" src="/images/jiaoshishijian.png"></image>
        <view class="grid-name">教室时间</view>
      </view>
      <view bindtap="goSynthesize" class="grid-item">
        <image class="grid-icon" src="/images/zongheshencha.png"></image>
        <view class="grid-name">综合审查</view>
      </view>
      <view bindtap="goSupply" class="grid-item">
        <image class="grid-icon" src="/images/daikerenwu.png"></image>
        <view class="grid-name">代课任务</view>
      </view>
      <view class="grid-item" bindtap="schoolCalendar">
        <image class="grid-icon" src="/images/xiaolichaxun.png"></image>
        <view class="grid-name">校历查询</view>
      </view>
      <view bindtap="goTeachTask" class="grid-item">
        <image class="grid-icon" src="/images/jiaoxuerenwu.png"></image>
        <view class="grid-name">教学任务</view>
      </view>
      <view bindtap="switchapply" class="grid-item">
        <image class="grid-icon" src="/images/tiaokeshenqing.png"></image>
        <view class="grid-name">调课申请</view>
      </view>
      <view bindtap="roomapply" class="grid-item">
        <image class="grid-icon" src="/images/jiaoshishenqing.png"></image>
        <view class="grid-name">教室申请</view>
      </view>
      <view bindtap="courseExamine" class="grid-item">
        <image class="grid-icon" src="/images/tiaokeshenpi.png"></image>
        <view class="grid-name">调课审批</view>
      </view>
      <view bindtap="roomapprove" class="grid-item">
        <image class="grid-icon" src="/images/jiaoshishenppi.png"></image>
        <view class="grid-name">教师审批</view>
      </view>
      <view bindtap="studyWarn" class="grid-item">
        <image class="grid-icon" src="/images/xueyeyujin.png"></image>
        <view class="grid-name">学业预警</view>
      </view>
    </view>
  </view>


</view>