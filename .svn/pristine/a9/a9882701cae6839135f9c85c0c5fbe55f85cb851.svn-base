/* pages/roomweekquery/roomweekquery.wxss */
/* pages/timetable/timetable.wxss */
page {
  background: #fff;
}

.intro {
  display: flex;
  justify-content: start;
  padding-left: 32rpx;
  padding-top: 36rpx;
  padding-bottom: 32rpx;
  height: 36rpx;
  font-size: 24rpx;
  color: #333336;
  background: #fff;
}

.intro-1 ,.intro-3 {
  margin-top: 7rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.intro-1 {
  background: #5D88FF;
}

.intro-3 {
  background: #E4EBFF;
  margin-left: 48rpx;
}

/* // 下拉 */
.layer {
  background: #fff;
  padding-bottom: 14rpx;
}

.select {
  display: inline-block;
  position: relative;
  font-size: 28rpx;
  color: #333336;
  min-width: 316rpx;
  padding-left: 16rpx;
  padding-right: 54rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #CCCCCF;
  border-radius: 8rpx;
  margin-left: 32rpx;
}

.select image {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 2rpx;
  right: 2rpx;
}

/* 表格 */
.table {
  width: 750rpx;
  height: 1280rpx;
  background: #F8F8FA;
  border-top: 2rpx solid #DDE4F6;
}

.table .title {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  justify-content: start;
  font-size: 24rpx;
  color: #333336;
  font-weight: 500;
}

.title .index {
  /* width: 64rpx; */
  /* width: 42rpx; */
  width: 40rpx;
  border-right: 2rpx solid #DDE4F6;
  height: 68rpx;
  line-height: 37rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  padding-left: 22rpx;
  text-align: left;
}

.title .table-header {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 98rpx;
  height: 68rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  text-align: center;
  /* border-bottom: 2rpx solid #DDE4F6; */
}

/* .title .table-header .weeks {} */
.title .table-header .dates {
  font-size: 20rpx;
  font-weight: 400;
}

.table .info {
  background: #FFF;
  display: flex;
  justify-content: start;
}

/* 表格左边索引 */
.table .info-l {
  background: #F8F8FA;
  width: 64rpx;
  text-align: center;
  height: 1180rpx;
  font-size: 28rpx;
  color: #333336;
  font-weight: 400;
  border-right: 2rpx solid #DDE4F6;
}

.table .info-l .info-index {
  height: 84.285rpx;
  line-height: 84.285rpx;
}

/* 表格右边的内容 每一个宽度96 */
.table .info-r {
  display: flex;
  justify-content: start;
  width: 686rpx;
  background: #FFF;
  height: 1180rpx;
  /* border-bottom: 2rpx solid #F8F8FA; */
}

.info-child {
  position: relative;
  width: 96rpx;
  border-right: 2rpx solid #DDE4F6;
  border-top: 2rpx solid #DDE4F6;
  border-bottom: 2rpx solid #DDE4F6;
}

.info-child-child {
  height: 82.2857rpx;
  border-bottom: 2rpx solid #DDE4F6;
}

.info-child-child image {
  width: 54rpx;
  height: 54rpx;
  margin-left: 21rpx;
  margin-top: 21rpx;
}

/* 第几周 */
.which-week {
  position: absolute;
  width: 132rpx;
  height: 52rpx;
  background: #EBF0FF;
  top: 28rpx;
  right: 32rpx;
  line-height: 52rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #5D88FF;
}
