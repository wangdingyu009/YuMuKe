.con-info {
  width: 686rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  /* padding-top: 34rpx; */
  /* padding-bottom: 34rpx; */
  display: flex;
  justify-content: space-between;
}
.info-l {
  width: 16rpx;
  /* height: 16rpx; */
  height: 8px;
  background: #FFAB5C;
  margin-right: 32rpx;
  /* margin-top: 42rpx; */
  margin-top: 21px;
}
.info-r {
  width: 638rpx;
  /* height: 202rpx; */
  /* padding-top: 34rpx; */
  /* padding-bottom: 34rpx; */
  height: 101px;
  padding-top: 17px;
  padding-bottom: 17px;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  border-bottom: 1px solid #EEEEF1;
}
.info-r .top {
  font-weight: 500;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.info-r .middle {
  font-size: 28rpx;
  color: #666669;
}
.info-r .bottom {
  font-size: 28rpx;
  color: #666669;
}
