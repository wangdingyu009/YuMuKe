// pages/switchapplyinfo/switchapplyinfo.js
const {
  switchApplyDesc
} = require('../../utils/api')
const { BASE_URL } = require('../../utils/config')
Page({

  /**
   * 页面的初始数据
   */
  data: {
    id: '',
    epid: '',
    desc: {}
  },

  downLoad(e) {
    
    console.log(e,'eeeeee')
    let v = e.currentTarget.dataset.item
    let arr = v.fileName.split('.')
    // if (arr[arr.length - 1] !== 'txt') {
      wx.showLoading({
        title: '加载中',
      })
    // }
    wx.downloadFile({
      url: BASE_URL + v.fileURL, //仅为示例，并非真实的资源
      success (res) {
        console.log(res,'res下载的文件')
        // 只要服务器有响应数据，就会把响应内容写入文件并进入 success 回调，业务需要自行判断是否下载到了想要的内容
        if (res.statusCode === 200) {
          if (arr[arr.length - 1] === 'doc' || arr[arr.length - 1] === 'docx' || arr[arr.length - 1] === 'xls' || arr[arr.length - 1] === 'xlsx' || arr[arr.length - 1] === 'ppt' || arr[arr.length - 1] === 'pptx' || arr[arr.length - 1] === 'pdf') {
            console.log('doc')
            wx.openDocument({ //一般采用这个打开 但是不支持txt所以我换了一种
              filePath: res.tempFilePath,
              fileType: arr[arr.length - 1],
              success: (res) => {
                wx.hideLoading()
                console.log("打开成功") //doc, xls, ppt, pdf, docx, xlsx, pptx需要有相对应的软件，自动打开对应软件显示比如docx打开word
              },
              fail: (err) => {
                console.log(err,'err')
              }
            })
          } else if (arr[arr.length - 1] === 'jpg' || arr[arr.length - 1] === 'png') {
            wx.hideLoading()
            wx.previewImage({
              current: res.tempFilePath, // 当前显示图片的http链接  
              urls: [res.tempFilePath] // 需要预览的图片http链接列表  
            })
          } else if (arr[arr.length - 1] === 'txt') {
            wx.hideLoading()
            wx.navigateTo({
              url: '/pages/readfile/readfile?a=' + res.tempFilePath, //跳转页面显示
            })
          } else {

          }
        } else {
          wx.showToast({
            title: '下载失败，请稍后重试',
            icon: 'none'
          })
        }
      }
    })
  },

  // 查看合班
  viewinclass() {
    wx.navigateTo({
      url: '/pages/viewinclass/viewinclass?epid=' + this.data.epid,
    })
  },

  // 初始化列表
  async init() {
    let params = {
      id: this.data.id
    }
    let res = await switchApplyDesc(params)
    this.setData({
      desc: res.data
    })
    console.log(res,'调课申请详情')
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    console.log(options,'调课申请详情页')
    this.setData({
      id: options.id,
      epid: options.epid
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    this.init()
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})