const {
  getCodeByWeixin,
  login
} = require('../../utils/api')
Page({

  /**
   * 页面的初始数据
   */
  data: {
    mobile: '',
    password: '',
  },
  telChange(e) {
    this.setData({
      mobile: e.detail.value
    })
  },
  pswChange(e) {
    this.setData({
      password: e.detail.value
    })
  },
  // 点击登录
 goLogin() {
   if (!this.data.mobile) {
    wx.lin.showToast({
      title: '账号不能为空',
      icon: 'warning',
    })
    return
   }
   if (!this.data.password) {
    wx.lin.showToast({
      title: '密码不能为空',
      icon: 'warning',
    })
    return
   }
    wx.login({
      success: async (res1) => {
        console.log(res1,'登录code')
        let params = {
          username: this.data.mobile,
          password: this.data.password,
          code: res1.code
        }
        let res11 = await login(params)
        if (res11.code === 1) {
          wx.setStorageSync('token', res11.data.token)
          wx.setStorageSync('roles', res11.data.userRoles)
          wx.lin.showToast({
            title: '登录成功~',
            icon: 'success',
            success: res => {
              wx.switchTab({
                url: '/pages/index/index',
              })
            }
          })
          
        } else {
          wx.lin.showToast({
            title: '登录失败',
            icon: 'warning',
          })
        }
        console.log(res11,'loginbyweixin')
      }
    })
  },

  // 是否已经绑定了微信号 如果已经绑定了微信号那么就不用走账号登录了 直接进首页
  isBindWechat() {
    wx.login({
      success: async (res) => {
        let params = {
          code: res.code
        }
        let res1 = await login(params)
        console.log(res1,'是否已经绑定了微信')
      }
    })
  },

